{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "0.1",
  "browser_action": {
   "default_icon": "img/off.png",
   "default_popup": "views/popup.html"
  },
  "permissions": [
    "activeTab"
    ],
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": ["lib/jquery.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}